<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_white_selector"
    android:padding="16dp">

  <TextView
      android:id="@+id/tvHint"
      style="@style/KpaContentTextStyle"
      android:layout_width="60dp"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxWidth="60dp"
      android:singleLine="true"
      android:textColor="@color/text_black_color"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <View
      android:id="@+id/line"
      android:layout_width="1dp"
      android:layout_height="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@color/text_black_grey_color"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/tvHint"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tvContent"
      style="@style/KpaContentTextStyle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:ellipsize="end"
      android:singleLine="true"
      android:textColor="@color/text_black_color"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/ivIcon"
      app:layout_constraintStart_toEndOf="@+id/line"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/ivIcon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:src="@drawable/selector_pass_visibility"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>