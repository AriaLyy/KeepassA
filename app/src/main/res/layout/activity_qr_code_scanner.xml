<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/barcodeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.journeyapps.barcodescanner.ViewfinderView
        android:id="@+id/vFinderView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/barcodeView"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/mask"
        app:layout_constraintBottom_toTopOf="@+id/vFinderView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/mask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vFinderView"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/mask"
        app:layout_constraintBottom_toBottomOf="@+id/vFinderView"
        app:layout_constraintEnd_toStartOf="@+id/vFinderView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vFinderView"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/mask"
        app:layout_constraintBottom_toBottomOf="@+id/vFinderView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vFinderView"
        app:layout_constraintTop_toTopOf="@+id/vFinderView"
        />

    <!--    <com.journeyapps.barcodescanner.DecoratedBarcodeView-->
    <!--        android:id="@+id/dbView"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"/>-->

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>